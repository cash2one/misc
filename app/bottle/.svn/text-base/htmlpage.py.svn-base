# encoding=utf-8
import cgi;

class Page:
	def __init__(self):
		self.fheader=''; # 文件头
		self.head=''; # html header
		self.body=''; # html body.
		self.set_header();

		# get param_set.
		self.form = cgi.FieldStorage();
		return ;

	def set_header(self, doctype='text/html', charset='utf-8'):
		'''设置Header
		'''
		self.fheader="Content-type: " + doctype + "; charset=" + charset + '\n\n';

	def prhead(self, s):
		self.head += str(s) + '\n';

	def prbody(self, s):
		self.body += str(s) + '\n';

	def get_param(self, opt, default_value=None):
		'''获取参数
		'''
		uname=default_value;
		if opt in self.form:
			uname = self.form[opt].value;
		return uname;

	def draw_page(self):
		print (
'''%s

<html>
<head>%s</head>
<body>
%s
</body>
</html>
''' % (self.fheader, self.head, self.body));

